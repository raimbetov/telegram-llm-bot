# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf

# Shell scripts
*.sh text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Config files
.gitignore text eol=lf
.gitattributes text eol=lf
.env.example text eol=lf

# Archives
*.7z binary
*.gz binary
*.tar binary
*.zip binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text
